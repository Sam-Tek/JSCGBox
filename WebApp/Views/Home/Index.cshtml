<section class="wrapper">
    <div class="container">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 mt-4 card-deck"  >
                    <div class="card text-white card-has-bg click-col" style="background-image:url('https://source.unsplash.com/600x900/?computer,design');">
                        <img class="card-img d-none" src="https://source.unsplash.com/600x900/?computer,design" alt="question">
                        <div class="card-img-overlay d-flex flex-column">
                            <div class="card-body">
                                <small class="card-meta mb-2">Questionnaires</small>
                                @if (item.Questionnaires != null)
                                {
                                    @foreach (var questionnaire in item.Questionnaires)
                                    {
                                        <h4 class="card-title mt-0 "><a class="text-white" herf="#">@questionnaire.Title</a></h4>
                                        <small><i class="far fa-clock"></i> @questionnaire.DefaultTimer</small>
                                    }
                                }
                            </div>
                            <div class="card-footer">
                                <div class="media">
                                    <img class="mr-3 rounded-circle" src="https://cdn0.iconfinder.com/data/icons/user-pictures/100/male-512.png" alt="cercle image" style="max-width:50px">
                                    <div class="media-body">
                                        <h6 class="my-0 text-white d-block"> @item.FirstName @item.LastName </h6>
                                        <small>@item.Email</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            }

        </div>

    </div>
</section>

@section Style {
    <link href="~/css/Style.css" rel="stylesheet" />
}


