@model IEnumerable<Entities.Questionnaire>

@{
    ViewData["Title"] = "Questionnaires";
}

<h1>Questionnaires</h1>

<p>
    <a asp-action="Create">Création Questionnaire</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Titre
            </th>
            <th>
                Temps par défaut
            </th>
            <th>
                Utilisateur
            </th>
            <th>
                Modifier | Détails | Supprimer
            </th>
            <th>
                Question
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultTimer)s
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Supprimer</a>
            </td>
            <td>
                <a asp-controller="AdminQuestion" asp-route-id="@item.Id" class="btn btn-outline-primary">Question</a>
            </td>
        </tr>
        }
    </tbody>
</table> 