@model Entities.Question

<h4>Question</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="#" id="SubmitAddQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Entitled" class="control-label">Intitulé</label>
                <input asp-for="Entitled" class="form-control" />
                <span asp-validation-for="Entitled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timer" class="control-label">Temps</label>
                <input id="Timer" name="Timer" class="form-control" />
                <span asp-validation-for="Timer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label">Ordre (0 pour un ordre automatique)</label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="QuestionnaireId" value="@Model.QuestionnaireId" />
            <input type="hidden" asp-for="Id" value="" />
        </form>
    </div>
</div>

<div>
    <a href="#SubmitAddQuestion" id="LinkCancelModification" onclick="cancelModification()">Annuler la modification</a><br /> 
</div>
