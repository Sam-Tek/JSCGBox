@model Entities.Question

<div class="card">
    <div class="card-header" id="heading@(Model.Id)">
        <h5 class="mb-0">
            <button id="TitleQuestion@(Model.Id)" class="btn btn-link" data-toggle="collapse" data-target="#collapse@(Model.Id)" aria-expanded="true" aria-controls="collapse@(Model.Id)">
                <span id="EntitledEditQuestion@(Model.Id)">@Model.Entitled</span> - <span id="TimerEditQuestion@(Model.Id)">@Model.Timer</span> s
            </button>
        </h5>
    </div>

    <div id="collapse@(Model.Id)" class="collapse @ViewBag.Show" aria-labelledby="heading@(Model.Id)" data-parent="#accordion">
        <div class="card-body">
            <a href="#SubmitAddQuestion" onClick="eventClickEditQuestion(@Model.Id);">Edit Question</a> |
            <a asp-action="Delete" asp-route-id="@Model.Id">Delete Question</a>
            <span class="IdQuestion" style="display: none;">@Model.Id</span><br />
            <a href="#TitleQuestion@(Model.Id)" onClick="eventClickAddProposal(@Model.Id);">Add Proposal</a><br />
            @if (Model.Proposals != null)
            {
                foreach (var proposal in Model.Proposals)
                {
                    <span id="proposal@(proposal.Id)">
                        -
                        <span id="EntitledEditProposal">@proposal.Entitled</span> ->
                        <span id="IsCorrectEditProposal">@proposal.IsCorrect</span>
                        <a href="#TitleQuestion@(Model.Id)" onclick="eventClickEditProposal(@proposal.Id, @Model.Id)">Edit Proposal</a> |
                        <a href="#TitleQuestion@(Model.Id)" onclick="eventClickDeleteProposal(@proposal.Id)">X</a><br />
                    </span>
                }
            }
        </div>
    </div>
</div>
